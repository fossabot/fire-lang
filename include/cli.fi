#include(argparse:ArgumentParser)

struct CliBuilder {
    parser: ArgumentParser
}

impl CliBuilder {
    fn __init__(self, description: str) {
        self.parser = ArgumentParser(description=description);
    }
    
    fn arg(self, arg: str, help: str = "") -> "CliBuilder" {
        self.parser.add_argument(arg, metavar=arg, type=str, help=help);
        return self;
    }

    fn bulid(self) {
        return self.parser.parse_args();
    }
}
